<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Первая строка: Дата и АЗС -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01.01.2025"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="АЗС"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Вторая строка: Топливо и пробег -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fuelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="АИ-95"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mileageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 000 км"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Третья строка: Объем и цена -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/volumeTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="40.00 л"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="58.00 ₽/л"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Четвертая строка: Сумма и отметка полного бака -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 320.00 ₽"
            android:textColor="@color/my_home_bar_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullTankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_full_tank"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Полный бак"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>